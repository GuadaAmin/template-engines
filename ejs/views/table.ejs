<% if(getProductos.length > 0) { %>
  <table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
    <% for (const prod of getProductos) { %>
      <tr>
        <td><%=this.nombre%></td>
        <td><%=this.apellido%></td>
        <td><%=this.edad%></td>
      </tr>
      <% }; %>
    </tbody>
  </table>
  <a href="/">
    <button>Añadir más productos</button>
  </a>
<% } else{ %>
  <h2>No hay productos</h2>
  <a href="/">
    <button>Añadir productos</button>
  </a>
<% }; %>